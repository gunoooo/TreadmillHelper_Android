<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="kr.hs.dgsw.treadmill_helper.widget.recyclerview.part.PartItemViewModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="15dp"
        tools:layout_height="130dp" >
        <FrameLayout
            android:id="@+id/stroke_1"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            app:mutableColor="@{viewModel.color}"/>

        <FrameLayout
            android:id="@+id/stroke_2"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:mutableColor="@{viewModel.color}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center"
                android:text="-\n30"
                android:textColor="@color/colorText"
                android:fontFamily="@font/nanum_square_light"
                android:autoSizeTextType="uniform"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:layout_weight="2" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:fontFamily="@font/nanum_square_regular"
                    android:textColor="@color/colorText"
                    android:autoSizeTextType="uniform"
                    app:mutableText="@{viewModel.title}"
                    tools:text="RUN"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/nanum_square_light"
                    android:textColor="@color/colorText"
                    android:autoSizeTextType="uniform"
                    app:mutableText="@{viewModel.speed}"
                    tools:text="speed : 10.5km/h" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/nanum_square_light"
                    android:textColor="@color/colorText"
                    android:autoSizeTextType="uniform"
                    app:mutableText="@{viewModel.incline}"
                    tools:text="incline : 0" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:gravity="center"
                android:text="+\n30"
                android:textColor="@color/colorText"
                android:fontFamily="@font/nanum_square_light"
                android:autoSizeTextType="uniform"
                android:layout_weight="1" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>